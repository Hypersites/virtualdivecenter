{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Destination list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Region</th>
                <th>Country</th>
                <th>Description</th>
                <th>Mainpicture</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Evaluations</th>
                <th>Trips</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('destination_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.region }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.mainPicture }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.evaluations }}</td>
                <td>{{ entity.trips }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('destination_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('destination_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('destination_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
