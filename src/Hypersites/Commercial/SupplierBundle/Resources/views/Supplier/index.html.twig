{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Supplier list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Website</th>
                <th>Description</th>
                <th>Logo</th>
                <th>Kindperson</th>
                <th>Fiscaldocument</th>
                <th>Active</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('supplier_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.website }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.logo }}</td>
                <td>{{ entity.kindPerson }}</td>
                <td>{{ entity.fiscalDocument }}</td>
                <td>{{ entity.active }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('supplier_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('supplier_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('supplier_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
